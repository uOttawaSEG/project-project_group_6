?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".TutorDashboardActivity">

    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="Welcome Tutor"
        android:textSize="20sp" />

    <Button
        android:id="@+id/btnManageAvailability"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Manage availability" />

    <Button
        android:id="@+id/btnUpcomingSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upcoming sessions"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnPastSessions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Past sessions"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnPendingRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pending requests"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log out"
        android:layout_marginTop="16dp" />

</LinearLayout>